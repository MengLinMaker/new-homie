{
    "private": true,
    "scripts": {
        "dev": "pnpm sst dev",
        "build": "nx run-many -t build",
        "bump": "exec syncpack update && exec syncpack fix && pnpm i",
        "docker:down": "docker compose down -v",
        "docker:up": "docker compose up --build -d && pnpm -r migrate",
        "format": "biome format --write",
        "graph": "pnpm nx graph",
        "knip": "knip",
        "lint": "biome lint --write && jscpd",
        "postinstall": "simple-git-hooks",
        "preinstall": "npx only-allow pnpm",
        "test": "nx run-many -t test:type test:unit"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.3",
        "@pulumi/pulumi": "^3.212.0",
        "@ts-safeql/eslint-plugin": "^4.1.0",
        "@types/node": "*",
        "@vitest/coverage-v8": "3.2.4",
        "esbuild": "^0.25.9",
        "eslint": "^9.39.2",
        "jscpd": "^4.0.7",
        "knip": "5.63.1",
        "libpg-query": "^17.7.3",
        "nx": "21.5.2",
        "simple-git-hooks": "2.13.1",
        "sst": "3.17.25",
        "syncpack": "14.0.0-alpha.19",
        "tsx": "^4.20.3",
        "typescript": "~5.9.2",
        "typescript-eslint": "^8.52.0",
        "vite": "^7.1.10",
        "vitest": "3.2.4"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm format && pnpm lint"
    },
    "packageManager": "pnpm@10.14.0",
    "type": "module"
}