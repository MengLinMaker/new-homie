        "local:invoke": "sam local invoke -t ./cdk.out/ServiceScrapeStack.template.json"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.152",
        "aws-cdk-lib": "^2.212.0",
        "constructs": "^10.4.2"
    }
}
