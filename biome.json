{
    "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 100,
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "useLiteralKeys": "warn",
                "noArguments": "warn"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            }
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    },
    "files": {
        "includes": [
            "**/*",
            "!**/coverage",
            "!**/dist",
            "!**/node_modules",
            "!**/.puppeteer",
            "!.nx"
        ],
        "ignoreUnknown": true
    },
    "assist": {
        "enabled": false
    }
}
