{
    "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 100,
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "useLiteralKeys": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    },
    "files": {
        "experimentalScannerIgnores": [
            "coverage",
            "dist",
            "node_modules"
        ],
        "ignoreUnknown": true
    }
}
