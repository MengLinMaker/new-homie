{
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "postinstall": "simple-git-hooks",
        "docker:down": "docker compose down -v",
        "docker:up": "docker compose up --build -d",
        "graph": "pnpm nx graph",
        "format": "biome format --write",
        "knip": "knip",
        "bump": "exec syncpack update && exec syncpack fix && pnpm i",
        "test": "nx run-many -t test:lint test:type test:unit test:perf",
        "build": "nx run-many -t build",
        "build:ci": "nx affected -t build",
        "test:ci": "nx affected -t test:lint test:type test:unit test:perf"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.0",
        "@types/node": "*",
        "@vitest/coverage-v8": "3.2.4",
        "aws-cdk": "^2.1026.0",
        "aws-cdk-local": "^3.0.1",
        "knip": "5.62.0",
        "nx": "21.3.11",
        "simple-git-hooks": "2.13.1",
        "syncpack": "14.0.0-alpha.19",
        "tsup": "8.5.0",
        "typescript": "~5.9.2",
        "vite": "7.1.2",
        "vitest": "3.2.4"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm format"
    },
    "packageManager": "pnpm@10.14.0",
    "type": "module"
}