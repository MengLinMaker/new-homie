{
    "private": true,
    "scripts": {
        "build": "nx run-many -t build",
        "bump": "exec syncpack update && exec syncpack fix && pnpm i",
        "docker:down": "docker compose down -v",
        "docker:up": "docker compose up --build -d",
        "format": "biome format --write",
        "git:b": "git checkout -b",
        "git:m": "git checkout main && git pull",
        "graph": "pnpm nx graph",
        "knip": "knip",
        "lint": "biome lint --write",
        "postinstall": "simple-git-hooks",
        "preinstall": "npx only-allow pnpm",
        "test": "nx run-many -t test:type test:unit"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.3",
        "@types/aws-lambda": "8.10.153",
        "@types/node": "*",
        "@vitest/coverage-v8": "3.2.4",
        "aws-cdk": "2.1029.0",
        "esbuild": "^0.25.9",
        "knip": "5.63.1",
        "nx": "21.5.2",
        "simple-git-hooks": "2.13.1",
        "sst": "3.17.14",
        "syncpack": "14.0.0-alpha.19",
        "typescript": "~5.9.2",
        "vitest": "3.2.4"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm format && pnpm lint"
    },
    "packageManager": "pnpm@10.14.0",
    "type": "module"
}
