{
    "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 100,
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "useLiteralKeys": "off",
                "noArguments": "warn"
            },
            "suspicious": {
                "noExplicitAny": "warn",
                "noUnknownAtRules": "off",
                "noTsIgnore": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    },
    "files": {
        "maxSize": 10000000,
        "includes": [
            "**/*",
            "!**/coverage",
            "!**/dist",
            "!**/node_modules",
            "!**/.puppeteer",
            "!**/cdk.out",
            "!.nx",
            "!**/src/routeTree.gen.ts",
            "!.sst/*",
            "**/sst-env.d.ts"
        ],
        "ignoreUnknown": true
    },
    "assist": {
        "enabled": false
    }
}
